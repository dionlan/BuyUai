<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracaoUsuario">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_configuracao_usuario"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imagemVoltar"
            android:src="@drawable/ic_action_back"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuração de Perfil"
            android:layout_gravity="center"
            android:id="@+id/text_configuracao_usuario"
            android:textColor="#ffffff"
            android:textSize="25dp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_configuracao_usuario"
        android:layout_below="@+id/toolbar_configuracao_usuario">

    </LinearLayout>
</RelativeLayout>